{
  "name": "fintech-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for FINTECH channel automation",
  "type": "module",
  "imports": {
    "#root/*": "./build/src/*"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "eslint . --fix",
    "typecheck": "tsc",
    "build": "tsc --noEmit false",
    "dev": "tsc-watch --onSuccess \"tsx ./scripts/start.ts\"",
    "start": "tsc && tsx ./scripts/start.ts",
    "start:force": "tsx ./scripts/start.ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "fintech",
    "grammy",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@grammyjs/auto-chat-action": "0.1.1",
    "@grammyjs/auto-retry": "^1.1.1",
    "@grammyjs/conversations": "^2.1.0",
    "@grammyjs/hydrate": "1.3.1",
    "@grammyjs/parse-mode": "1.8.1",
    "@grammyjs/runner": "^2.0.3",
    "@grammyjs/storage-supabase": "^2.5.0",
    "@grammyjs/types": "3.2.2",
    "@supabase/supabase-js": "^2.56.0",
    "@types/express": "^5.0.3",
    "axios": "^1.11.0",
    "dotenv": "16.3.1",
    "express": "^5.1.0",
    "grammy": "^1.38.1",
    "grammy-guard": "^0.5.0",
    "node-cron": "^4.2.1",
    "node-graceful-shutdown": "1.1.5",
    "pino": "8.15.1",
    "pino-pretty": "10.2.0",
    "tsx": "^4.20.4",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "20.6.3",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "eslint": "8.49.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-unicorn": "48.0.1",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "tsc-watch": "6.0.4",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
